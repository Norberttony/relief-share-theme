{
    "version": 2,
    "$schema": "https://schemas.wp.org/wp/6.3/theme.json",
    "settings": {
        "appearanceTools": true,
        "spacing": {
            "blockGap": true
        },
        "color": {
            "palette": [
                {
                    "color": "#FFF",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#000",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#E4C956",
                    "name": "Accent 1",
                    "slug": "accent-1"
                },
                {
                    "color": "#B69100",
                    "name": "Accent 2",
                    "slug": "accent-2"
                },
                {
                    "color": "#2C6EAB",
                    "name": "Accent 3",
                    "slug": "accent-3"
                }
            ]
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "site-header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "site-footer",
            "title": "Footer"
        },
        {
            "area": "sidebar",
            "name": "sidebar",
            "title": "Sidebar"
        },
        {
            "area": "masthead",
            "name": "masthead",
            "title": "Masthead"
        }
    ],
    "styles": {
        "typography": {
            "fontFamily": "Raleway, sans-serif"
        },
        "elements": {
            "heading": {
                "color": {
                    "text": "#2c6eab"
                },
                "typography": {
                    "fontFamily": "Lato, sans-serif"
                }
            }
        },
        "blocks": {
            "relief-share/masthead": {
                "spacing": {
                    "blockGap": "0em"
                }
            },
            "relief-share/header": {
                "spacing": {
                    "blockGap": "0em"
                }
            },
            "core/quote": {
                "color": {
                    "background": "#0693e3"
                }
            }
        }
    }
}